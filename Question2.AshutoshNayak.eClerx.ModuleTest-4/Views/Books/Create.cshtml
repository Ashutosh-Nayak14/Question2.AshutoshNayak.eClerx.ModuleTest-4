@using Question2.AshutoshNayak.eClerx.ModuleTest_4.Models
@model BookDetails
@{
    ViewBag.Title = "Create";
}

<h3>Add New Product </h3>
<hr />
<div class="container">
    <div class="row">
        <div class="col-6">
            @using (Html.BeginForm())
            {
                <div class="mb-3">
                    @Html.LabelFor(b=>b.ISBN)
                    @Html.TextBoxFor(b=>b.ISBN, new { @class = "form-control" })
                    @Html.ValidationMessageFor(b=>b.ISBN)
                </div>
                <div class="mb-2">
                    @Html.LabelFor(b => b.BookName)
                    @Html.TextBoxFor(b => b.BookName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(b => b.BookName)
                </div>
                <div class="mb-2">
                    @Html.LabelFor(b => b.Genre)
                    @Html.TextBoxFor(b => b.Genre, new { @class = "form-control" })
                    @Html.ValidationMessageFor(b => b.Genre)

                </div>
                <div class="mb-2">
                    @Html.LabelFor(b => b.AuthorName)
                    @Html.TextBoxFor(b => b.AuthorName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(b =>b.AuthorName)
                </div>
                <div class="mb-2">
                    <button type="submit" class="btn btn-outline-primary">Save</button>
                    <button type="reset" class="btn btn-outline-danger">Reset</button>
                </div>
            }
        </div>
    </div>
</div>


